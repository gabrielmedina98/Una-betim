        // exercicio em sala de aula
        int vet[] = new int[4];
        int soma = 0;
        int media = 0;
        int maior = 0; 
        int menor = 0;
               
       
        for (int i = 0; i < vet.length; i++) {
            System.out.println("Digite a " + (i + 1) + "° nota");
            vet[i] = leia.nextInt();
            soma = vet[i] + soma;
        }
        maior = vet[0];
        menor = vet[0];
        media = soma / vet.length;
        System.out.println("A media foi " + media);
        for (int i = 0; i < vet.length; i++) {
            if (vet[i] >= media) {
                System.out.println("Nota maior que a media " + vet[i]);
            }
            if (vet[i] > maior) {
                maior = vet[i];
            }
            else if(vet[i]<menor)
                menor=vet[i];
                
        }
         System.out.println("Maior nota é :" + maior);
        System.out.println("Menor nota é :" + menor);

